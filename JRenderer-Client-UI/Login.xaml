<Window x:Class="JRenderer_Client.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JRenderer_Client"
        mc:Ignorable="d"
        Title="Login" Height="227" Width="219">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="311*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="Username" HorizontalAlignment="Left" Height="23" Margin="50,32,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <PasswordBox Name="Password" HorizontalAlignment="Left" Margin="50,70,0,0" VerticalAlignment="Top" Height="23" Width="120" Grid.ColumnSpan="2"/>
        <Button Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="70,125,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="LoginButton_Click"/>

    </Grid>
</Window>
